<a href={{this.url}} class="h-100 card d-flex flex-row">
	<div class="cover-image img-fluid" style="background-image: url('{{this.imageSrc}}');"></div>
	<div class="overlay"></div>
	<div class="wrapper d-flex flex-row align-self-end pr-3 pb-3 pl-3">
		<div class="content color-white">
			<small class="date">{{this.date}}</small>
			<h3 class="title mb-0">{{this.title}}</h3>
		</div>
		<div class="arrow d-flex align-items-end">
			<svg class="next-arrow" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 6.5 12">
				<line class="st0" x1="0" y1="-0.5" x2="6.5" y2="6.5"/>
				<line class="st0" x1="0" y1="12.5" x2="6.5" y2="5.5"/>
			</svg>
			<span class="line"></span>
		</div>
	</div>
</a>